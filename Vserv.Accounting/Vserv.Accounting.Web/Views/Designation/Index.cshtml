@model IEnumerable<Vserv.Accounting.Web.Models.DesignationModel>

@{
    ViewBag.Title = "Designations";
}
<div class="row">
    <div class="col-lg-12">
        <div class="form-group pull-right">
            <a href="@Url.Action("add", "designation")" class="btn btn-info">Add New Designation</a>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-designation">
                        <thead>
                            <tr>
                                <th>Designation Name</th>
                                <th>Description</th>
                                <th>Is Active</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@Html.ActionLink(item.Name, "edit", "designation", new { designationId = item.DesignationId }, null)</td>
                                    <td>@item.Description</td>
                                    <td>@item.IsActive</td>
                                    <td>@(item.CreatedDate.ToString("MM/dd/yyyy"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->