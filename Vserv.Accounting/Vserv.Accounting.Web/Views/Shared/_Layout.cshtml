<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Account Management System">
    <meta name="author" content="Vserv Business Solutions PVT LTD.">
    <title>@ViewBag.Title | Vserv Solutions</title>
    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/DataTables")
    @Styles.Render("~/Content/base")
    @Styles.Render("~/Content/base/font-awesome.min.css")

    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/moment")
    @Scripts.Render("~/bundles/bootstrap")
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            @Html.Action("Header", "Home")
            @Html.Action("Index", "Navbar")
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    @Html.MvcSiteMap().SiteMapPath()
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Title</h1>
                    @RenderBody()
                    @Scripts.Render("~/Scripts/base")
                    @Scripts.Render("~/Scripts/app")
                    @Scripts.Render("~/Scripts/DataTables")

                    @Scripts.Render("~/Scripts/views/employee")
                    @RenderSection("scripts", required: false)
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
</body>
</html>