@model IEnumerable<Vserv.Accounting.Data.Entity.EmployeeArchive>
<div class="row">
    <div class="col-lg-12">
        @if (Model.Count() > 0)
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-employee-history" style="width:100%">
                            <thead>
                                <tr>
                                    <th>History Id</th>
                                    <th>Updated By</th>
                                    <th>Updated On</th>
                                    <th>View Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@item.EmployeeArchiveId.ToString().PadLeft(5, '0')</td>
                                        <td>@item.UpdatedBy</td>
                                        <td>@item.UpdatedDate</td>
                                        <td>@Html.ActionLink("Compare with Current", "EmployeeCompareResult", "employee", new { EmployeeArchiveId = item.EmployeeArchiveId }, new { @class = "btn btn-xs btn-block btn-primary", title = "Click to Compare with current employee detail" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        <!-- /.panel -->
        }
        else
        {
            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Oh snap!</strong> There are no history available for this Employee.
            </div>
        }

    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<script type="text/javascript">
    $(function () {
        $('#dataTables-employee-history').DataTable({
            responsive: true,
            select: true,
            processing: true
        });
    })
</script>