@model IEnumerable<Vserv.Accounting.Data.Entity.Employee>

@{
    ViewBag.Title = "View Employees";
}

<ul class="nav nav-tabs">
    <li class="active"><a href="#add-employee" data-toggle="tab">@ViewBag.Title</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade active in padding-top10" id="add-employee">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-employees">
                                <thead>
                                    <tr>
                                        <th>Employee Id</th>
                                        <th>Employee Name</th>
                                        <th>Father's Name</th>
                                        <th>UAN</th>
                                        <th>PAN</th>
                                        <th>Email Address</th>
                                        <th>Joining Date</th>
                                        <th>Designation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@Html.ActionLink(item.VBS_Id, "edit", "employee", new { employeeId = item.EmployeeId }, null)</td>
                                            <td>@String.Format("{0} {1} {2}", item.FirstName, item.MiddleName, item.LastName) </td>
                                            <td>@item.FatherName</td>
                                            <td>@item.UniversalAccountNumber</td>
                                            <td>@item.PermanentAccountNumber</td>
                                            <td>@item.OfficialEmailAddress</td>
                                            <td>@item.JoiningDate.ToString("MM/dd/yyyy")</td>
                                            <td>@(item.Designation != null ? item.Designation.Name : String.Empty)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
</div>

