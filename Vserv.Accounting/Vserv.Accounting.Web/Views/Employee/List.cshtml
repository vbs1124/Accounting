@model IEnumerable<Vserv.Accounting.Data.Entity.Employee>

@{
    ViewBag.Title = "View Employees";
}

<ul class="nav nav-tabs">
    <li class="active"><a href="#list-employee" data-toggle="tab">@ViewBag.Title</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade active in padding-top10" id="list-employee">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group pull-right">
                    <select class="form-control" id="select">
                        <option>All Employees</option>
                        <option>In Active Employees</option>
                        <option>Active Employees</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-employees">
                                <thead>
                                    <tr>
                                        <th>Employee Id</th>
                                        <th>Name</th>
                                        <th>Designation</th>
                                        <th>Mobile Number</th>
                                        <th>Email Address</th>
                                        <th>Date of Joining</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@Html.ActionLink(item.VBS_Id, "edit", "employee", new { employeeId = item.EmployeeId }, null)</td>
                                            <td>@String.Format("{0} {1} {2}", item.FirstName, item.MiddleName, item.LastName) </td>
                                            <td>@(item.Designation != null ? item.Designation.Name : String.Empty)</td>
                                            <td>@item.MobileNumber</td>
                                            <td>@item.OfficialEmailAddress</td>
                                            <td>@item.JoiningDate.ToString("MM/dd/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#dataTables-employees').DataTable({
            responsive: true,
            select: true,
            processing: true
        });
    })
</script>
