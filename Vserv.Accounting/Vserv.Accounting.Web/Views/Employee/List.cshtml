@model IEnumerable<Vserv.Accounting.Data.Entity.Employee>

@{
    ViewBag.Title = "Employees";
}
<div class="row">
    <div class="col-lg-12">
        <div class="form-group pull-right">
            <a href="@Url.Action("Add", "Employee")" class="btn btn-info">Add New Employee</a>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-employees">
                        <thead>
                            <tr>
                                <th>Employee Id</th>
                                <th>Employee Name</th>
                                <th>Father's Name</th>
                                <th>UAN</th>
                                <th>PAN</th>
                                <th>Email Address</th>
                                <th>Joining Date</th>
                                <th>Designation</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@Html.ActionLink(item.VBS_Id, "Edit", "Employee", new { employeeId = item.EmployeeId }, null)</td>
                                    <td>@String.Format("{0} {1} {2}", item.FirstName, item.MiddleName, item.LastName) </td>
                                    <td>@item.FatherName</td>
                                    <td>@item.UniversalAccountNumber</td>
                                    <td>@item.PermanentAccountNumber</td>
                                    <td>@item.EmailAddress</td>
                                    <td>@item.JoiningDate.Value.ToString("MM/dd/yyyy")</td>
                                    <td>@(item.Designation != null ? item.Designation.Name : String.Empty)</td>
                                    <td><a href="@Url.Action("Delete", "Employee", new { employeeId = item.EmployeeId }, null)" onclick="return confirm('Are you sure you want to delete this employee?');"><i title="Remove Employee" class="fa fa-times fa-1 text-danger"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->