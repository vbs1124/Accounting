                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.BankMICRCode == Model.PreviousEmployeeInfo.BankMICRCode ? "" : "danger")">
                    <td>MICR Code</td>
                    <td>@Model.PreviousEmployeeInfo.BankMICRCode</td>
                    <td>@Model.CurrentEmployeeInfo.BankMICRCode</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.IsActive == Model.PreviousEmployeeInfo.IsActive ? "" : "danger")">
                    <td>Active Employee</td>
                    <td>@(Model.PreviousEmployeeInfo.IsActive ? "Yes" : "No")</td>
                    <td>@(Model.CurrentEmployeeInfo.IsActive ? "Yes" : "No")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
