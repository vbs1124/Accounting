                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.PermanentCity == Model.PreviousEmployeeInfo.PermanentCity ? "" : "danger")">
                    <td>Permanent City</td>
                    <td>@Model.PreviousEmployeeInfo.PermanentCity</td>
                    <td>@Model.CurrentEmployeeInfo.PermanentCity</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.PermanentZipCode == Model.PreviousEmployeeInfo.PermanentZipCode ? "" : "danger")">
                    <td>Permanent Zip Code</td>
                    <td>@Model.PreviousEmployeeInfo.PermanentZipCode</td>
                    <td>@Model.CurrentEmployeeInfo.PermanentZipCode</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.PermanentStateId == Model.PreviousEmployeeInfo.PermanentStateId ? "" : "danger")">
                    <td>Permanent State</td>
                    <td>@Model.PreviousEmployeeInfo.State1.Name</td>
                    <td>@Model.CurrentEmployeeInfo.State1.Name</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.MailingAddress1 == Model.PreviousEmployeeInfo.MailingAddress1 ? "" : "danger")">
                    <td>Mailing Address1</td>
                    <td>@Model.PreviousEmployeeInfo.MailingAddress1</td>
                    <td>@Model.CurrentEmployeeInfo.MailingAddress1</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.MailingAddress2 == Model.PreviousEmployeeInfo.MailingAddress2 ? "" : "danger")">
                    <td>Mailing Address2</td>
                    <td>@Model.PreviousEmployeeInfo.MailingAddress2</td>
                    <td>@Model.CurrentEmployeeInfo.MailingAddress2</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.MailingCity == Model.PreviousEmployeeInfo.MailingCity ? "" : "danger")">
                    <td>Mailing City</td>
                    <td>@Model.PreviousEmployeeInfo.MailingCity</td>
                    <td>@Model.CurrentEmployeeInfo.MailingCity</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.MailingZipCode == Model.PreviousEmployeeInfo.MailingZipCode ? "" : "danger")">
                    <td>Mailing Zip Code</td>
                    <td>@Model.PreviousEmployeeInfo.MailingZipCode</td>
                    <td>@Model.CurrentEmployeeInfo.MailingZipCode</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.MailingStateId == Model.PreviousEmployeeInfo.MailingStateId ? "" : "danger")">
                    <td>Mailing State</td>
                    <td>@Model.PreviousEmployeeInfo.State.Name</td>
                    <td>@Model.CurrentEmployeeInfo.State.Name</td>
                </tr>

                <tr class="@(Model.CurrentEmployeeInfo.IsMetro == Model.PreviousEmployeeInfo.IsMetro ? "" : "danger")">
                    <td>IsMetro</td>
                    <td>@Model.PreviousEmployeeInfo.IsMetro</td>
                    <td>@Model.CurrentEmployeeInfo.IsMetro</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.BankAccountNumber == Model.PreviousEmployeeInfo.BankAccountNumber ? "" : "danger")">
                    <td>Bank Account Number</td>
                    <td>@Model.PreviousEmployeeInfo.BankAccountNumber</td>
                    <td>@Model.CurrentEmployeeInfo.BankAccountNumber</td>
