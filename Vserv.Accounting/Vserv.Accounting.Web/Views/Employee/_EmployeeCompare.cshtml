                <tr class="@(Model.CurrentEmployeeInfo.BankId == Model.PreviousEmployeeInfo.BankId ? "" : "danger")">
                    <td>Bank</td>
                    <td>@Model.PreviousEmployeeInfo.Bank.Name</td>
                    <td>@Model.CurrentEmployeeInfo.Bank.Name</td>
                </tr>
                <tr class="@(Model.CurrentEmployeeInfo.BankIFSCCode == Model.PreviousEmployeeInfo.BankIFSCCode ? "" : "danger")">
                    <td>IFSC Code</td>
                    <td>@Model.PreviousEmployeeInfo.BankIFSCCode</td>
