            @Html.LabelFor(m => m.JoiningDate, new { @class = "control-label required-field" })
            <div class='input-group date' id="dp-joining-date">
                @Html.TextBoxFor(m => m.JoiningDate, new { @class = "form-control" })
                <span class="input-group-addon">
