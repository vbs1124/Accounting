    <div class="col-lg-4">
        <div class="form-group">
            @Html.LabelFor(m => m.OfficialEmailAddress, new { @class = "control-label required-field" })
            @Html.TextBoxFor(m => m.OfficialEmailAddress, new { @class = "form-control", @maxlength = "35" })
            @Html.ValidationMessageFor(m => m.OfficialEmailAddress)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PersonalEmailAddress, new { @class = "control-label required-field" })
            @Html.TextBoxFor(m => m.PersonalEmailAddress, new { @class = "form-control", @maxlength = "35" })
            @Html.ValidationMessageFor(m => m.PersonalEmailAddress)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OfficeBranchId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.OfficeBranchId, new SelectList(ViewBag.OfficeBranches, "Value", "Text"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.OfficeBranchId)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DesignationId, new { @class = "control-label" })
