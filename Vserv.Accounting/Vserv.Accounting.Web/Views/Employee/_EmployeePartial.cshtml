            @Html.LabelFor(m => m.ResignationDate, new { @class = "control-label" })
            <div class='input-group date' id="dp-resignation-date">
                @Html.TextBoxFor(m => m.ResignationDate, new { @class = "form-control" })
                <span class="input-group-addon">
