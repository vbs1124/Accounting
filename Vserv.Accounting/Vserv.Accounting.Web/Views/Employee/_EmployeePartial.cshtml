            @Html.LabelFor(m => m.RelievingDate, new { @class = "control-label" })
            <div class='input-group date' id="dp-relieving-date">
                @Html.TextBoxFor(m => m.RelievingDate, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                @Html.ValidationMessageFor(m => m.RelievingDate)
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.IsActive) Active Employee
                </label>
            </div>
        </div>
    </div>
</div>
<fieldset id="fieldset-permanent-address">
    <legend>Permanent Address</legend>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentAddress1, new { @class = "control-label required-field" })
                @Html.TextAreaFor(m => m.PermanentAddress1, new { @class = "form-control permanent-geo-field", data_geo = "address_components", placeholder = "", @rows = 4, @maxlength = "200" })
                @Html.ValidationMessageFor(m => m.PermanentAddress1)
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentAddress2, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.PermanentAddress2, new { @class = "form-control permanent-geo-field", data_geo = "sublocality", placeholder = "", @maxlength = "200" })
                @Html.ValidationMessageFor(m => m.PermanentAddress2)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentZipCode, new { @class = "control-label required-field" })
                @Html.TextBoxFor(m => m.PermanentZipCode, new { @class = "form-control permanent-geo-field", data_geo = "postal_code", placeholder = "", @maxlength = "6" })
                @Html.ValidationMessageFor(m => m.PermanentZipCode)
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentCity, new { @class = "control-label required-field" })
                @Html.TextBoxFor(m => m.PermanentCity, new { @class = "form-control permanent-geo-field", data_geo = "locality", placeholder = "", @maxlength = "35" })
                @Html.ValidationMessageFor(m => m.PermanentCity)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentStateId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.PermanentStateId, new SelectList(ViewBag.States, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PermanentStateId)
            </div>
        </div>
    </div>
</fieldset>
<fieldset id="fieldset-mailing-address">
    <legend>
        Mailing Address
    </legend>
    <div class="row">
        <div class="col-lg-6 text-success">
            <label>
                <input type="checkbox" id="chk-copy-permanent-address" onchange="onchange_copyPermanentAdds(this);"> Copy from Permanent Address
            </label>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                @Html.LabelFor(m => m.MailingAddress1, new { @class = "control-label required-field" })
                @Html.TextAreaFor(m => m.MailingAddress1, new { @class = "form-control mailing-geo-field", data_geo = "address_components", placeholder = "", @resize = "none", @rows = 3, @maxlength = "200" })
                @Html.ValidationMessageFor(m => m.MailingAddress1)
            </div>
            <div class="form-group">
                <div class="radio">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.IsMetro, "True") Metro
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.IsMetro, "false") Non Metro
                    </label>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                @Html.LabelFor(m => m.MailingAddress2, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.MailingAddress2, new { @class = "form-control mailing-geo-field", data_geo = "sublocality", placeholder = "", @maxlength = "200" })
                @Html.ValidationMessageFor(m => m.MailingAddress2)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MailingZipCode, new { @class = "control-label required-field" })
                @Html.TextBoxFor(m => m.MailingZipCode, new { @class = "form-control mailing-geo-field", data_geo = "postal_code", placeholder = "", @maxlength = "6" })
                @Html.ValidationMessageFor(m => m.MailingZipCode)
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                @Html.LabelFor(m => m.MailingCity, new { @class = "control-label required-field" })
                @Html.TextBoxFor(m => m.MailingCity, new { @class = "form-control mailing-geo-field", data_geo = "locality", placeholder = "", @maxlength = "35" })
                @Html.ValidationMessageFor(m => m.MailingCity)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MailingStateId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.MailingStateId, new SelectList(ViewBag.States, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MailingStateId)
            </div>
        </div>
    </div>
</fieldset>
