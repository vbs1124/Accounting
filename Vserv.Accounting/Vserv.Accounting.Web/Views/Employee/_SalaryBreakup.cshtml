<div class="row form-horizontal">
    <div class="col-md-12">
        <div class="form-group">
            <div class="col-md-8">
                &nbsp;
            </div>
            <label for="" class="col-md-2 control-label">Financial Year</label>
            <div class="col-md-2">
                <select class="form-control" ng-model="vm.selectedFinancialYear" ng-change="onChangeFinancialYear()">
                    <option ng-repeat="x in vm.financialYears" value="{{x.currentYear}}">{{x.financialYear}}</option>
                </select>
            </div>
        </div>
    </div>
</div>
<div class="row" ng-show="vm.employeePaySheet.length > 0 ">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr class="success">
                        <th>&nbsp;</th>
                        <th>April</th>
                        <th>May</th>
                        <th>June</th>
                        <th>July</th>
                        <th>August</th>
                        <th>September</th>
                        <th>October</th>
                        <th>November</th>
                        <th>December</th>
                        <th>January</th>
                        <th>February</th>
                        <th>March</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody ng-repeat="item in vm.employeePaySheet">
                    <tr class="warning" ng-show="item.SCDescription=='Medical'">
                        <td colspan="14"><center><strong>Reimbursments:</strong></center></td>
                    </tr>
                    <tr ng-hide="item.SCDescription=='Special Allowance'">
                        <td class="text-right"><strong>{{item.SCDescription}}</strong></td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.April">{{ item.April | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.April | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.May">{{ item.May | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.May | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.June">{{ item.June | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.June | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.July">{{ item.July | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.July | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.August">{{ item.August | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.August | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.September">{{ item.September | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.September | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.October">{{ item.October | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.October | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.November">{{ item.November | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.November | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.December">{{ item.December | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.December | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.January">{{ item.January | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.January | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.February">{{ item.February | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.February | currency:'&#8377;':0"></span>
                        </td>
                        <td>
                            <a href="#" buttons="no" ng-show="isEditableColumn(item.SCCode)" editable-text="item.March">{{ item.March | currency:'&#8377;':0}}</a>
                            <span ng-show="isEditableColumn(item.SCCode)==false" ng-bind="item.March | currency:'&#8377;':0"></span>
                        </td>
                        <td class="text-bold"><span ng-bind="getCurrentComponentTotal(item) | currency:'&#8377;':0"></span></td>
                    </tr>
                    <tr ng-show="item.SCDescription=='Special Allowance'">
                        <td class="text-right"><strong>{{item.SCDescription}}</strong></td>
                        <td>{{vm.employeePaySheet|specialAllowanceByMonth:'April' | currency:'&#8377;':0}}</td>
                        <td>{{vm.employeePaySheet|specialAllowanceByMonth:'May' | currency:'&#8377;':0}}</td>
