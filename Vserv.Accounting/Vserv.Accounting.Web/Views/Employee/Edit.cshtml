@model Vserv.Accounting.Web.Models.EmployeeModel
@{
    ViewBag.Title = "Edit Employee";
}
<style type="text/css">
    .gridStyle {
        width: 1260px;
        height: 650px;
    }
</style>

<ul class="nav nav-tabs">
    <li class="active"><a href="#edit-employee" data-toggle="tab">@ViewBag.Title</a></li>
    <li class=""><a href="#emp-salary-summary" data-toggle="tab" aria-expanded="false">Salary Summary</a></li>
    <li class=""><a href="#emp-salary-breakup" data-toggle="tab" aria-expanded="false">Salary Breakup</a></li>
    <li class=""><a href="#employee-history" data-toggle="tab" aria-expanded="false">View History</a></li>
</ul>
<div class="tab-content">

    <div class="tab-pane fade active in padding-top10" id="edit-employee">
        @using (Html.BeginForm("edit", "employee"))
        {
            @Html.HiddenFor(emp => emp.EmployeeId)
            @Html.Partial("_EmployeePartial")
        }
    </div>
    <div class="tab-pane fade padding-top10" id="emp-salary-summary" ng-controller="EmpSalarySummaryController" ng-init="">
        @Html.Partial("_SalarySummary")
    </div>
    <div class="tab-pane fade padding-top10" ng-controller="EmpSalaryBreakupController" id="emp-salary-breakup" ng-init="loadYearlyPaySheet(@Model.EmployeeId)">
        @Html.Partial("_SalaryBreakup")
    </div>
    <div class="tab-pane fade padding-top10" id="employee-history">
        @Html.Action("employeehistory", "employee")
    </div>
</div>

@Html.Action("DesignationWindow", "Designation")
