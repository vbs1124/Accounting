<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"> <i class="fa fa-history fa-fw"></i>  Appraisal History</h3>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        @*<div class="row">
                <div class="col-md-6">
                    <div class="gridStyle" ui-grid="employeeAppraisalHistoryGridOptions"></div>
                </div>
            </div>*@
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr class="success">
                        <th title="">Effective From</th>
                        <th title="">Cost to Company(CTC)</th>
                        <th title="">% Growth</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="history in vm.employeeAppraisalHistory">
                        <td>{{history.CurrentEffectiveFrom}}</td>
                        <td>{{history.CurrentCTC | currency:'&#8377;':0}}</td>
                        <td>{{history.PercentageGrowth}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.panel-body -->
<!-- /.panel -->