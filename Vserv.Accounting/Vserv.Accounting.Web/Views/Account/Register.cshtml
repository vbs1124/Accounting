@model Vserv.Accounting.Web.Models.RegisterModel

@{
    ViewBag.Title = "Create a new account";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <h4>@ViewBag.Title</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group text-danger">
                        @Html.ValidationSummary(false)
                    </div>
                   
                    <form role="form">
                        <fieldset>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @maxlength = "100" })
                                        @Html.ValidationMessageFor(m => m.FirstName)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @maxlength = "100" })
                                        @Html.ValidationMessageFor(m => m.LastName)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @maxlength = "100" })
                                        @Html.ValidationMessageFor(m => m.Email)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.MobileAlias, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.MobileAlias, new { @class = "form-control", @maxlength = "10" })
                                        @Html.ValidationMessageFor(m => m.MobileAlias)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @maxlength = "10" })
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @maxlength = "250" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @maxlength = "250" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label"> Security Question 1</label>
                                        @Html.DropDownListFor(m => m.UserSecurityQuestion1.SecurityQuestionId, new SelectList(ViewBag.SecurityQuestionCollection1, "SecurityQuestionId", "Question"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label"> Answer</label>
                                        @Html.TextBoxFor(m => m.UserSecurityQuestion1.Answer, new { @class = "form-control", @maxlength = "100" })
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label"> Security Question 2</label>
                                        @Html.DropDownListFor(m => m.UserSecurityQuestion2.SecurityQuestionId, new SelectList(ViewBag.SecurityQuestionCollection2, "SecurityQuestionId", "Question"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label"> Answer</label>
                                        @Html.TextBoxFor(m => m.UserSecurityQuestion2.Answer, new { @class = "form-control", @maxlength = "100" })
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label"> Security Question 3</label>
                                        @Html.DropDownListFor(m => m.UserSecurityQuestion3.SecurityQuestionId, new SelectList(ViewBag.SecurityQuestionCollection3, "SecurityQuestionId", "Question"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label"> Answer</label>
                                        @Html.TextBoxFor(m => m.UserSecurityQuestion3.Answer, new { @class = "form-control", @maxlength = "100" })
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-lg btn-success " value="Register" />
                                        <a href="@Url.Action("index","home")" class="btn btn-primary btn-lg ">Sign in</a>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
