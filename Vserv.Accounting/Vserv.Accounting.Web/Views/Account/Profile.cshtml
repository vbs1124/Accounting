@model Vserv.Accounting.Web.Models.UserProfileModel

@{
    ViewBag.Title = "My Profile";
}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DisplayName, new { @class = "col-lg-4 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.DisplayName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-lg-4 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.MobileAlias, new { @class = "col-lg-4 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.MobileAlias, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.MobileAlias)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastActivityDate, new { @class = "col-lg-4 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.LastActivityDate, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.LastActivityDate)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group pull-left">
                    <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-info">Change Password</a>
                </div>
            </div>
        </div>
    </div>
</div>
