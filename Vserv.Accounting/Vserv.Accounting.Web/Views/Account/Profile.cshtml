@model Vserv.Accounting.Web.Models.UserProfileModel

@{
    ViewBag.Title = "My Profile";
}
<ul class="nav nav-tabs">
    <li class="active"><a href="#user-profile" data-toggle="tab">@ViewBag.Title</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade active in padding-top10" id="user-profile">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DisplayName, new { @class = "col-lg-4 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.DisplayName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-lg-4 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.MobileAlias, new { @class = "col-lg-4 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.MobileAlias, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.MobileAlias)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


