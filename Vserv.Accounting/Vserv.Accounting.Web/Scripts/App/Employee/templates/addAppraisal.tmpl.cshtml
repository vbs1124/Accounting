@using Vserv.Accounting.Web.Helpers
@model Vserv.Accounting.Web.Models.EmpSalaryStructureModel
<script src="~/Scripts/App/Employee/EmployeeService.js"></script>
<form novalidate
      name="vm.form"
      ng-submit="vm.form.$valid && vm.addEmployeeSalaryDetail()">
    <fieldset ng-disabled="vm.saving">
        <div class="modal-header">
            <h4 class="modal-title">Add New Appraisal</h4>
        </div>
        <div class="modal-body">
            <div class="alert alert-danger" ng-show="vm.errorMessage != null">
                {{vm.errorMessage}}
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Angular().FormForModel("vm.empSalaryStructureModel")
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group pull-right">
                <button class="btn btn-success">Save</button>
                <button type="button" class="btn btn-default" ng-click="$dismiss()">Cancel</button>
            </div>
        </div>
    </fieldset>
</form>

